<brls:Box id="video/osd"
          grow="1"
          axis="column"
          justifyContent="spaceBetween"
          alignItems="center"
          hideHighlight="true"
          hideHighlightBorder="true"
          hideClickAnimation="true"
          hideHighlightBackground="true">
        <brls:Box
                id="video/osd/top/box"
                width="100%"
                height="80"
                backgroundStartColor="#000000CC"
                backgroundEndColor="#00000000"
                background="vertical_linear">

            <brls:Label
                    id="video/osd/title"
                    height="100%"
                    marginLeft="20"
                    marginRight="120"
                    singleLine="true"
                    textColor="#FFFFFF"/>

            <brls:Box
                    wireframe="false"
                    id="video/osd/setting"
                    hideClickAnimation="true"
                    positionType="absolute"
                    positionRight="10"
                    positionTop="10"
                    alignItems="center"
                    justifyContent="center"
                    height="60"
                    width="60">
                <brls:Image
                        id="video/osd/setting/icon"
                        focusable="true"
                        focusUp="video/osd/setting/icon"
                        focusLeft="video/osd/setting/icon"
                        focusRight="video/osd/setting/icon"
                        focusDown="video/osd/lock/box"
                        hideHighlightBackground="true"
                        highlightCornerRadius="30"
                        height="30"
                        width="30"
                        image="@res/svg/bpx-svg-sprite-setting.svg"/>
            </brls:Box>

            <brls:Box
                    id="video/speed/hint/box"
                    width="100%"
                    positionBottom="-10"
                    visibility="gone"
                    positionType="absolute"
                    justifyContent="center"
                    alignItems="center">
                <brls:Box
                        backgroundColor="#00000080"
                        cornerRadius="4"
                        paddingTop="12"
                        paddingBottom="12"
                        paddingRight="12"
                        paddingLeft="80"
                        justifyContent="center"
                        alignItems="center">
                    <brls:Label
                            id="video/speed/hint/label"
                            textColor="#FFFFFF"
                            text="2 倍速播放中"
                            fontSize="24"
                            singleLine="true" />
                </brls:Box>
            </brls:Box>
        </brls:Box>

        <brls:Box
                axis="column"
                alignItems="center"
                justifyContent="center"
                visibility="gone"
                cornerRadius="4"
                width="100"
                height="100"
                backgroundColor="#303030A0"
                id="video/osd/center/box2">
            <brls:Image
                    id="video/osd/center/icon2"
                    height="48"
                    width="48"
                    marginBottom="12"/>
            <brls:Label
                    id="video/osd/center/label2"
                    textColor="#FFFFFF"
                    fontSize="24"
                    height="16" />
        </brls:Box>

        <brls:Box
                axis="column"
                alignItems="center"
                visibility="gone"
                id="video/osd/center/box">

            <brls:ProgressSpinner
                    id="video/osd/loading"
                    width="100"
                    height="100"/>

            <brls:Label
                    id="video/osd/center/label"
                    cornerRadius="4"
                    backgroundColor="#303030A0"
                    textColor="#FFFFFF"
                    fontSize="16"
                    height="16"
                    horizontalAlign="center"
                    verticalAlign="center"/>
        </brls:Box>

        <brls:Box
                id="video/osd/bottom/box"
                width="100%"
                height="120"
                alignItems="center"
                axis="row"
                background="vertical_linear">
            <brls:Box
                    id="video/osd/toggle"
                    wireframe="false"
                    focusable="true"
                    focusUp="video/osd/setting/icon"
                    focusLeft="video/osd/toggle"
                    focusRight="video/osd/icon/box"
                    focusDown="video/osd/toggle"
                    hideHighlightBackground="true"
                    highlightCornerRadius="100"
                    hideClickAnimation="true"
                    alignItems="center"
                    justifyContent="center"
                    marginLeft="20"
                    marginRight="20"
                    marginBottom="20"
                    height="100"
                    width="100">
                <brls:Image
                        id="video/osd/toggle/icon"
                        wireframe="false"
                        height="100"
                        width="100"
                        image="@res/svg/bpx-svg-sprite-play.svg"/>
            </brls:Box>

            <brls:Box
                    width="auto"
                    grow="1"
                    height="130"
                    paddingRight="12"
                    axis="column">

                <brls:Slider
                        id="video/osd/bottom/progress"
                        focusable="true"
                        focusUp="video/osd/lock/box"
                        focusDown="video/osd/icon/box"
                        width="100%"
                        height="50"
                        marginTop="10"
                        grow="1"/>

                <brls:Box
                        width="100%"
                        height="80"
                        alignItems="center"
                        grow="1">
                    <brls:Label
                            wireframe="false"
                            horizontalAlign="right"
                            id="video/left/status"
                            height="100%"
                            width="100"
                            textColor="#FFFFFF"
                            text="00:00"/>
                    <brls:Label
                            id="video/center/status"
                            horizontalAlign="center"
                            height="100%"
                            textColor="#FFFFFF"
                            text="/"/>
                    <brls:Label
                            wireframe="false"
                            horizontalAlign="left"
                            id="video/right/status"
                            height="100%"
                            width="100"
                            textColor="#FFFFFF"
                            text="00:00"/>

                    <brls:Box
                            id="video/osd/icon/box"
                            positionType="absolute"
                            positionRight="20">
                        <brls:Box
                                id="video/osd/box/volume"
                                hideClickAnimation="true"
                                alignItems="center"
                                justifyContent="center"
                                height="60"
                                width="60">
                            <brls:Image
                                    id="video/osd/volume/icon"
                                    focusable="true"
                                    focusUp="video/osd/bottom/progress"
                                    focusDown="video/osd/volume/icon"
                                    hideHighlightBackground="true"
                                    highlightCornerRadius="30"
                                    wireframe="false"
                                    height="30"
                                    width="30"
                                    image="@res/svg/bpx-svg-sprite-volume.svg"/>
                        </brls:Box>

                        <brls:Box
                                hideClickAnimation="true"
                                marginLeft="10"
                                marginRight="10"
                                alignItems="center"
                                justifyContent="center"
                                height="60">
                            <brls:Label
                                    id="video/speed"
                                    textColor="#FFFFFF"
                                    focusable="true"
                                    focusUp="video/osd/bottom/progress"
                                    focusDown="video/speed"
                                    focusRight="video/speed"
                                    horizontalAlign="center"
                                    text="@i18n/main/player/speed"
                                    hideHighlightBackground="true"
                                    highlightCornerRadius="8"/>
                        </brls:Box>
                    </brls:Box>
                </brls:Box>
            </brls:Box>
        </brls:Box>

    <!--    <VideoProfile-->
    <!--            id="video/profile"-->
    <!--            positionTop="22"-->
    <!--            positionLeft="22"-->
    <!--            positionType="absolute"-->
    <!--            visibility="invisible"/>-->

        <brls:Box
                width="50"
                height="50"
                alignItems="center"
                hideHighlightBackground="true"
                highlightCornerRadius="10"
                backgroundColor="#303030A0"
                focusable="true"
                focusUp="video/osd/setting/icon"
                focusDown="video/osd/bottom/progress"
                focusRight="video/osd/lock/box"
                focusLeft="video/osd/lock/box"
                cornerRadius="8"
                positionTop="45%"
                positionRight="20"
                positionType="absolute"
                id="video/osd/lock/box">
            <brls:Image
                    id="video/osd/lock/icon"
                    detachedX="13"
                    detachedY="13"
                    height="24"
                    width="24"
                    image="@res/svg/player-unlock.svg"/>
        </brls:Box>
</brls:Box>